{
    "compilerOptions": {
      "noImplicitAny": false,
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "allowJs": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      "baseUrl": "./",
      "types": ["vite/client"],
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "vueCompilerOptions": {
      "experimentalCompatMode": 2
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": ["node_modules"]
  }
  